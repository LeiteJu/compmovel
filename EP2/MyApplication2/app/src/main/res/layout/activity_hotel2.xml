<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hotel2Activity">

    <LinearLayout
        android:id="@+id/hotel2_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/hotel2_principalImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@drawable/gradient_bg_hotel"
            android:layout_weight="0.60"
            android:padding="30dp">

            <ImageView
                android:id="@+id/hotel2_hotelImg"
                android:layout_width="wrap_content"
                android:layout_height="310dp"
                android:scaleType="center"
                android:src="@drawable/hotel2"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hotel2_descriptionContainer"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_weight="0.4">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title2"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="@color/dark_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maravilhoso hotel de luxo em São Paulo, que conta com incríveis instalações e um chefe com estrelas Michelan na cozinha"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/medium_gray"/>
            <TextView
                android:id="@+id/hotel2_localization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loc2"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>

            <LinearLayout
                android:id="@+id/hotel2_tempCard"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="25dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/medium_gray">

                <TextView
                    android:id="@+id/hotel2_tempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Temperatura: carregando :)"
                    />

                <ImageView
                    android:id="@+id/hotel2_tempIcon"
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15sp"
                    android:src="@drawable/cloud"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:orientation="horizontal">

<!--                <Button-->
<!--                    android:id="@+id/hotel_btnReservar"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Reservar" />-->

                <Button
                    android:id="@+id/hotel2_btnVoltar"
                    android:minHeight="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:visibility="visible"
                    android:text="Voltar"/>

                <Button
                    android:id="@+id/hotel2_btnReservar"
                    android:layout_width="0dp"
                    android:minHeight="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:layout_marginStart="100dp"
                    android:text="Reservar" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>