<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".HotelsActivity">

    <RelativeLayout
        android:id="@+id/hotels_container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/hotels_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:layout_weight="0.2">
                <TextView
                    android:id="@+id/hotels_welcomeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="20sp"
                    android:textSize="18dp"
                    android:text="Bem vinde, Pessoa!"
                    />
                <TextView
                    android:id="@+id/hotels_featuredHotels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotéis em destaque:"
                    android:textSize="32sp"
                    android:layout_marginHorizontal="20sp"
                    android:fontFamily="@font/pacifico400regular"
                    />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                android:id="@+id/hotels_listFeaturedHotels"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="15dp"
                android:layout_weight="0.5"
                >

                <LinearLayout
                android:id="@+id/hotels_featuredHotel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/hotel1"
                android:scaleType="center"
                android:padding="15dp"
                />

                <LinearLayout
                android:layout_margin="15sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:gravity="left"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="São Paulo, SP"
                android:layout_weight="0.4"
                android:layout_marginHorizontal="15dp"
                />
                    <Button
                        android:id="@+id/hotels_btn1"
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:text="Conhecer"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
                <LinearLayout
                android:id="@+id/hotels_featuredHotel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hotel2"
                    android:scaleType="center"
                    android:padding="15dp"
                    />

                <LinearLayout
                    android:layout_margin="15sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:gravity="left"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text="São Paulo, SP"
                        android:layout_weight="0.4"
                        android:layout_marginHorizontal="15dp"
                        />
                    <Button
                        android:id="@+id/hotels_btn2"
                        android:layout_width="0dp"
                        android:layout_weight="0.30"
                        android:text="Conhecer"
                        android:layout_marginHorizontal="15dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
                <LinearLayout
                android:id="@+id/hotels_featuredHotel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hotel3"
                    android:scaleType="center"
                    android:padding="15dp"
                    />

                <LinearLayout
                    android:layout_margin="15sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:gravity="left"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:text="São Paulo, SP"
                        android:layout_weight="0.4"
                        android:layout_marginHorizontal="15dp"
                        />
                    <Button
                        android:id="@+id/hotels_btn3"
                        android:layout_width="0dp"
                        android:layout_weight="0.30"
                        android:text="Conhecer"
                        android:layout_marginHorizontal="15dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>